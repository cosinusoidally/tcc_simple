./mk_clean
cd artifacts
cd artifacts
cp -r ../orig .
cd orig

set -xe

make

mkdir asm
mkdir asm2

for i in *\.c ; do 
  j=$(basename $i .c)
  ./chibicc -S $j.c -o asm/$j.s
done

cd asm
sha256sum -c ../../../sums_orig

for i in *\.s ; do
  ../chibicc -c $i
done

../chibicc *o -o ../chibicc_self

cd ..


# belt and brances just to make sure chibicc can't call the wrong binary
# FIXME is this needed?

rm chibicc

for i in *\.c ; do
  j=$(basename $i .c)
  ./chibicc_self -S $j.c -o asm2/$j.s
done

cd asm2
sha256sum -c ../../../sums_orig


cd ..
pwd
