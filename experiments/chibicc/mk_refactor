./mk_clean
cd artifacts
cd artifacts
cp -r ../orig .
cp -r ../refactor .
cd refactor

set -xe

gcc -g -O0 *c -o chibicc

export PATH=$PWD:$PATH

cd ../orig

mkdir asm
mkdir asm2

for i in *\.c ; do 
  j=$(basename $i .c)
  chibicc -S $j.c -o asm/$j.s
done

cd asm
sha256sum -c ../../../sums_orig

for i in *\.s ; do
  chibicc -c $i
done

chibicc *o -o ../chibicc_self

cd ..

# belt and braces so previously built chibicc doesn't get called
# FIXME is this an issue?

chmod -x $(which chibicc)

for i in *\.c ; do
  j=$(basename $i .c)
  ./chibicc_self -S $j.c -o asm2/$j.s
done

cd asm2
sha256sum -c ../../../sums_orig
